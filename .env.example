# Curio MVP Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE
# Get these from your Supabase project settings: https://supabase.com/dashboard
# =============================================================================

# Public - exposed to browser (safe to share)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Private - server-side only (keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# NEXT.JS
# =============================================================================

# Used for absolute URL generation (optional in development)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =============================================================================
# EMAIL (RESEND)
# Get your API key from: https://resend.com/api-keys
# =============================================================================

RESEND_API_KEY=re_your-api-key-here

# =============================================================================
# AUTH
# Generate a secret with: openssl rand -base64 32
# =============================================================================

# Session encryption key
NEXTAUTH_SECRET=your-secret-key-here
